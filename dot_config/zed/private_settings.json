{
  "relative_line_numbers": true,
  "vim_mode": true,
  "theme": "Catppuccin Macchiato",
  "inlay_hints": {
    "enabled": true
  },
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },
  "lsp": {
    "basedpyright": {
      "settings": {
        "analysis": {
          "typeCheckingMode": "standard"
        }
      }
    },
    "pyrefly": {
      "binary": {
        "path": "pyrefly",
        "arguments": ["lsp"]
      },
      "settings": {
        "pyrefly": {
          "project_includes": ["**/*.py"],
          "search_path": ["."],
          "python_interpreter": ".venv/bin/python"
        }
      }
    },
    "jdtls": {
      "initialization_options": {
        "bundles": [],
        "workspaceFolders": [
          "file:///home/erb/labsec/ataque-a-campos-de-assinatura-de-pdf/src/tester_scripts/dss-verifier"
        ]
      },
      "settings": {
        "java": {
          "home": "/usr/lib/jvm/java-25-openjdk",
          "errors": {
            "incompleteClasspath": {
              "severity": "warning"
            }
          },
          "configuration": {
            "updateBuildConfiguration": "interactive",
            "maven": {
              "userSettings": null
            }
          },
          "trace": {
            "server": "verbose"
          },
          "import": {
            "gradle": {
              "enabled": true
            },
            "maven": {
              "enabled": true
            },
            "exclusions": [
              "**/node_modules/**",
              "**/.metadata/**",
              "**/archetype-resources/**",
              "**/META-INF/maven/**",
              "/**/test/**"
            ]
          },
          "jdt": {
            "ls": {
              "lombokSupport": {
                "enabled": true // Set this to true to enable lombok support
              }
            }
          },
          "referencesCodeLens": {
            "enabled": false
          },
          "signatureHelp": {
            "enabled": false
          },
          "implementationsCodeLens": {
            "enabled": false
          },
          "format": {
            "enabled": true
          },
          "saveActions": {
            "organizeImports": false
          },
          "contentProvider": {
            "preferred": null
          },
          "autobuild": {
            "enabled": false
          },
          "completion": {
            "favoriteStaticMembers": [
              "org.junit.Assert.*",
              "org.junit.Assume.*",
              "org.junit.jupiter.api.Assertions.*",
              "org.junit.jupiter.api.Assumptions.*",
              "org.junit.jupiter.api.DynamicContainer.*",
              "org.junit.jupiter.api.DynamicTest.*"
            ],
            "importOrder": ["java", "javax", "com", "org"]
          }
        }
      }
    }
  },
  "languages": {
    "Python": {
      "language_servers": ["!pyrefly", "!ty", "basedpyright", "!pylsp", "..."]
    }
  },
  "vim": {
    "use_system_clipboard": "on_yank"
  }
}
