{
  "vim_mode": true,
  "theme": "Catppuccin Macchiato",
  "inlay_hints": {
    "enabled": true
  },
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },
  "lsp": {
    "basedpyright": {
      "settings": {
        "analysis": {
          "typeCheckingMode": "standard"
        }
      }
    },
    "pyrefly": {
      "binary": {
        "path": "pyrefly",
        "arguments": ["lsp"]
      },
      "settings": {
        "pyrefly": {
          "project_includes": ["**/*.py"],
          "search_path": ["."],
          "python_interpreter": ".venv/bin/python"
        }
      }
    }
  },
  "languages": {
    "Python": {
      "language_servers": ["pyrefly", "!ty", "!basedpyright", "!pylsp", "..."]
    }
  },
  "vim": {
    "use_system_clipboard": "on_yank"
  }
}
